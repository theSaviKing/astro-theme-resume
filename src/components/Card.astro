---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import { cn } from '@/utils'

const {
	as: Tag = 'div',
	class: className,
	href,
	heading,
	subheading,
	date,
	imagePath,
	altText,
	imageClass,
	icon: Icon,
	iconClass,
	logoPath,
	logoAltText,
	logoClass
} = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif}')

if (imagePath) {
	if (!images[imagePath]) {
		throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`)
	}
}

if (logoPath) {
	if (!logoPath[imagePath]) {
		throw new Error(`"${logoPath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`)
	}
}
---

<Tag
	class={cn(
		className,
		'relative rounded-2xl border border-border bg-card px-5 py-3',
		href && 'transition-all hover:border-foreground/25 hover:shadow-sm'
	)}
	href={href}
>
	{
		imagePath && !Icon && (
			<Image
				src={images[imagePath]()}
				alt={altText}
				class={cn('mb-3 md:absolute md:mb-0', imageClass)}
				loading='eager'
			/>
		)
	}
	{Icon && !imagePath && <Icon class={cn('mb-3 md:absolute md:mb-0', iconClass)} />}
	<div class='flex flex-col gap-y-1.5'>
		<div class='flex items-center justify-between'>
			<div class='flex flex-col gap-y-0.5'>
				<h1 class='text-lg font-medium' set:html={heading} />
				<h2 class='text-muted-foreground' set:html={subheading} />
				<h2 class='text-muted-foreground' set:html={date.replace('-', '&ndash;')} />
			</div>
		</div>

		<slot />
	</div>
</Tag>
